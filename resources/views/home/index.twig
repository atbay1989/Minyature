{% extends 'app.twig' %}

{% block content %}
    {% if messages.success %}
        {% include 'partials/_success.twig' with { 'message': messages.success | first} %}
    {% endif %}
    <form action="{{ url_for('messages.store') }}" method="POST" class="bg-white p-6 rounded shadow-2xl w-full">
        <div class="mb-4">
            <label for="email" class="inline-bloc uppercase text-gray-600 font-medium text-sm tracking-wide mb-2">
                Email
            </label>
            <input type="text" name="email" id="email" class="border border-gray-400 rounded h-12 w-full px-4">
        </div>

        <div class="mb-4"> 
            <label for="message" class="inline-bloc uppercase text-gray-600 font-medium text-sm tracking-wide mb-2">
                Message
            </label>

            <textarea name="message" id="message" class="border border-gray-400 rounded h-32 w-full p-4"></textarea>
        </div>

        <div>
            <button type="submit" class="block w-full rounded bg-gray-300 text gray-600 font medium h-12 hover:bg-gray-400">
                Send
            </button>
        </div>
    </form>
{% endblock %}
